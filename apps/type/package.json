{
  "name": "type",
  "version": "1.0.0",
  "description": "Tiko Type - Text-to-speech communication app",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite",
    "test": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint .",
    "cap:add": "cap add ios",
    "cap:sync": "cap sync",
    "cap:open": "cap open ios",
    "cap:build": "pnpm run build && cap sync",
    "ios:build": "pnpm run build && cap sync ios",
    "ios:run": "pnpm run build && cap sync ios && cap open ios",
    "predev": "cd ../.. && pnpm build:packages",
    "dev:no-build": "vite"
  },
  "dependencies": {
    "vue": "^3.4.21",
    "vue-router": "^4.3.0",
    "pinia": "^2.1.7",
    "@tiko/upos": "workspace:*",
    "@tiko/ui": "workspace:*",
    "@tiko/core": "workspace:*",
    "open-icon": "^1.1.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/test-utils": "^2.4.4",
    "sass": "^1.71.1",
    "typescript": "~5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1",
    "vue-tsc": "^1.8.27"
  }
}
